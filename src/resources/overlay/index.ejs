<!doctype html>
<html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>Firebot Overlay</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
		<link href="css/main.css" rel='stylesheet' type='text/css'>

        <% for(let cssDep of dependencies.css) { %>
            <link rel="stylesheet" type="text/css" href="<%-cssDep%>">
        <% } %>

        <% for(let globalStyle of dependencies.globalStyles) { %>
            <style><%-globalStyle%></style>
        <% } %>

    </head>
    
    <body>

        <!-- This spinner is a hack to force OBS to always render the page while videos are playing -->
        <div class="browser-source-force-render-spinner"></div>

        <div class="wrapper" id="wrapper"></div>
    </body>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/motion@12.23.16/dist/motion.min.js"></script>
    
    <script src="js/reconnecting-websocket.js"></script>
    <script src="js/util.js"></script>
    <script src="js/overlay-widgets.js"></script>
    <script src="js/plugins/create.js"></script>
    <script src="js/plugins/countUp.umd.js"></script>
    <script src="js/fireworks.js"></script>
    <script src="js/confetti.js"></script>
    <script src="js/fitty.js"></script>
    <script src="js/main.js"></script>
    <script src="https://www.youtube.com/iframe_api"></script>

    <% for(let jsDep of dependencies.js) { %>
        <script src="<%-jsDep%>"></script>
    <% } %>

    <script>
        const queryParams = new URLSearchParams(window.location.search);
        if (queryParams.has("instance") && queryParams.get("instance") !== "") {
            document.title = `Firebot Overlay (${queryParams.get("instance")})`;
        } else {
            document.title = "Firebot Overlay (Default)";
        }

        <% for(let effectEvent of effectEvents) {%>
            effectEvents.on('<%-effectEvent.name%>', <%-effectEvent.onOverlayEvent%>);
        <% } %>

        <% for(let widgetEvent of widgetEvents) {%>
            widgetEvents.on('<%-widgetEvent.name%>', <%-widgetEvent.callback%>);
        <% } %>

        const widgetInitCallbacks = [
            <% for(let widgetInitCallback of widgetInitCallbacks) { %>
                ["<%-widgetInitCallback.typeId%>", <%-widgetInitCallback.callback%>],
            <% } %>
        ];
        
        for(const [widgetType, callback] of widgetInitCallbacks) {
            try {
                const utils = new OverlayWidgetInitUtils(widgetType);
                callback(utils);
            } catch(ex) {
                console.error("Error in widget init callback", ex);
            }
        }

    </script>
</html> 
